<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Player Name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPlayerImage"
            android:layout_width="67dp"
            android:layout_height="64dp"
            android:src="@drawable/emptyplayerimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Number"
            app:layout_constraintStart_toEndOf="@+id/ivPlayerImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTeam"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Team"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivPlayerImage" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Country"
            app:layout_constraintStart_toEndOf="@+id/tvNumber"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Age"
            app:layout_constraintStart_toEndOf="@+id/tvCountry"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPosition" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:text="Position"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvTeam" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>